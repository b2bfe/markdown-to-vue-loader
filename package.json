{
  "name": "markdown-to-vue-loader",
  "version": "1.0.0",
  "description": "Markdown to Vue component loader for Webpack.",
  "main": "dist/markdown-to-vue-loader.js",
  "module": "dist/markdown-to-vue-loader.esm.js",
  "repository": "fengyuanchen/markdown-to-vue-loader",
  "homepage": "https://fengyuanchen.github.io/markdown-to-vue-loader",
  "license": "MIT",
  "author": {
    "name": "Chen Fengyuan",
    "url": "https://chenfengyuan.com"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "markdown",
    "vue",
    "vue-component",
    "vue.js",
    "webpack-loader",
    "front-end",
    "node"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:docs": "webpack --mode production --env.production",
    "clear": "del-cli dist",
    "clear:docs": "del-cli docs/dist docs/index.html",
    "deploy": "npm run lint:docs && npm run clear:docs && npm run build:docs",
    "dev": "npm run clear:docs && npm run dev:docs",
    "dev:docs": "webpack-dev-server --mode development --hot --open --overlay",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src test *.config.js --ext .js,.vue --fix",
    "lint:css": "stylelint **/src/**/*.{css,scss,vue,html} --fix",
    "lint:docs": "eslint docs/src --ext .js,.vue --fix",
    "prebuild": "npm run lint && npm run clear",
    "release": "npm run build && npm test && npm run deploy",
    "start": "npm run dev",
    "test": "nyc mocha",
    "test:cover": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "loader-utils": "^1.1.0",
    "markdown-it": "^8.4.2",
    "postcss": "^7.0.6"
  },
  "peerDependencies": {
    "vue-loader": "^15.0.0",
    "webpack": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.0.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "memory-fs": "^0.4.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "postcss-cli": "^6.0.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.4.0",
    "rollup": "^0.67.4",
    "rollup-plugin-babel": "^4.0.3",
    "style-loader": "^0.23.1",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0",
    "vue": "^2.5.18",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.18",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  }
}
